<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter your details: "
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/edit_text_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        android:textColorHint="@color/black"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:id="@+id/edit_text_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Mobile No:"
        android:textColorHint="@color/black"
        android:layout_below="@+id/edit_text_one"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:id="@+id/edit_text_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DOB:"
        android:textColorHint="@color/black"
        android:layout_below="@+id/edit_text_two"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:id="@+id/edit_text_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your City"
        android:textColorHint="@color/black"
        android:layout_below="@+id/edit_text_three"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:id="@+id/linearlay1"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_four"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Insert"
            android:layout_marginStart="30dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="45dp"
            android:text="Delete"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlay2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlay1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn3"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Update"
            android:textSize="20sp"
            android:layout_marginStart="30dp"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="View"
            android:textSize="20sp"
            android:layout_marginStart="45dp"/>

    </LinearLayout>




</RelativeLayout>